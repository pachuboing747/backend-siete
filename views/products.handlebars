<div class="uk-padding-large uk-child-width-1-1" uk-grid>
  {{#if pageInfo.hasPrevPage}}
      <a href={{pageInfo.prevLink}}><< Anterior</a>
  {{/if}}
  &nbsp;
  {{pageInfo.page}}
  &nbsp;
    {{#if pageInfo.hasNextPage}}
      <a href={{pageInfo.nextLink}}>Siguiente >></a>
  {{/if}} 
</div>
<div id="products" class="uk-child-width-1-4@m" uk-grid>
    {{#each products}}
    <div>
        <div class="uk-card uk-card-default">
        <h2>{{title}}</h2>
        <p>Precio: {{price}}</p>
        <p>Descripcion: {{description}}</p>
        <form action="/api/carts" method="POST">
          <input type="hidden" name="productId" value="{{_id}}">
          <button type="submit">Agregar al carrito</button>
        </form>
        </div>
    </div>
    {{/each}}
</div>
